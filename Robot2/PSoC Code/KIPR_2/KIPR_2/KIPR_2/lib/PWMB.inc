include "m8c.inc"


;--------------------------------------------------
; Constants for PWMB API's.
;--------------------------------------------------

PWMB_CONTROL_REG_START_BIT:                equ 0x01    ; Control register start bit
PWMB_INT_REG:                              equ 0x0df
PWMB_INT_MASK:                             equ 0x01


;--------------------------------------------------
; Constants for PWMB user defined values
;--------------------------------------------------

PWMB_PERIOD:                               equ 0xff
PWMB_PULSE_WIDTH:                          equ 0x00


;--------------------------------------------------
; Register Address Constants for PWMB
;--------------------------------------------------

PWMB_COUNTER_REG:                      equ 0x40   ; DR0 Count register
PWMB_PERIOD_REG:                       equ 0x41   ; DR1 Period register
PWMB_COMPARE_REG:                      equ 0x42   ; DR2 Compare register
PWMB_CONTROL_REG:                      equ 0x43   ; Control register
PWMB_FUNC_REG:                         equ 0x40   ; Function register
PWMB_INPUT_REG:                        equ 0x41   ; Input register
PWMB_OUTPUT_REG:                       equ 0x42   ; Output register


;--------------------------------------------------
; PWMB Macro 'Functions'
;--------------------------------------------------

   macro PWMB_Start_M
   or    reg[PWMB_CONTROL_REG],  PWMB_CONTROL_REG_START_BIT
   endm

   macro PWMB_Stop_M
   and   reg[PWMB_CONTROL_REG], ~PWMB_CONTROL_REG_START_BIT
   endm

   macro PWMB_EnableInt_M
   M8C_EnableIntMask PWMB_INT_REG, PWMB_INT_MASK
   endm

   macro PWMB_DisableInt_M
   M8C_DisableIntMask PWMB_INT_REG, PWMB_INT_MASK
   endm


